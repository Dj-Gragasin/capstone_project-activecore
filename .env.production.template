DB_HOST=<your-db-host>
DB_PORT=5432
DB_USER=<your-db-user>
DB_PASSWORD=<your-db-password>
DB_NAME=activecore

JWT_SECRET=<your-jwt-secret>


PORT=3002
NODE_ENV=production

# Frontend URL for CORS
FRONTEND_URL=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com



SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=<smtp-user>
SMTP_PASS=<smtp-pass>
FROM_EMAIL=no-reply@activecore.test
INACTIVE_NOTIFY_DAYS=1

# ============================================
# OPENAI CONFIGURATION (Optional)
# ============================================
# Leave blank if meal planning AI is not needed
OPENAI_API_KEY=your-openai-api-key

# ============================================
# ERROR TRACKING (Sentry)
# ============================================
# Get from https://sentry.io - only activates if set
SENTRY_DSN=<your-sentry-dsn>

# ============================================
# LOGGING
# ============================================
# Logs will be written to: logs/error.log and logs/combined.log
# Set log level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info
